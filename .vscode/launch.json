{
    "version": "0.2.0",
    "configurations": [

        {
            "name": "Executar com Makefile",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "Build com Make",
            "program": "${workspaceFolder}/bin/apps.exe",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": true,
            "MIMode": "gdb",
            "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
            "setupCommands": [
                {
                    "description": "Habilitar formatação automática para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
